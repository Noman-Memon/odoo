<odoo>
    # Form View
    <record id="rest_staff_view_form" model="ir.ui.view">
        <field name="name">rest.staff.view.form</field>
        <field name="model">rest.staff</field>
        <field name="arch" type="xml">
            <form string="staff form">
                <!--                # object button is used to call any created python function & action button is used to redirect provided action Id-->
                <header>
                    <button name="new_function" string="Check" type="object" class="oe_highlight"/>
                    <button name="orm_create" string="orm create" type="object" class="oe_highlight"/>
                    <button name="%(sale.action_quotations_with_onboarding)d" string="go to sales" type="action"
                            class="oe_highlight"/>
                    <button name="%(tutorial_project.rest_staff_wizard_action_id)d" string="Update Staff Info"
                            type="action"
                            class="oe_highlight"/>
                    <button name="delete_one2many" string="delete lines" type="object" class="oe_highlight"/>
                    <button name="check_orm" string="Check Orm" type="object" class="oe_highlight"/>
                    <field name="status" widget="statusbar"/>
                    <button name="changestatus" string="Change Status" type="object" class="oe_highlight"
                            attrs="{'invisible':[('status','!=','active')]}"/>
                </header>
                <sheet>
                    <h1>
                        <field name="seq_num"/>
                    </h1>
                    <field name="image" widget="image" style="width:150px;height:150px;"/>
                    <group>
                        <group>

                            <field name="name"/>
                            <field name="age"/>
                            <field name="gender"/>
                            <field name="dob"/>
                            <field name="country_code"/>
                        </group>
                        <group>
                            <field name="mobile"/>
                            <field name="email"/>
                            <field name="country_id" options="{'no_open':True,'no_create':True}"/>
                            <field name="country_ids" widget="many2many_tags"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="staff line">
                            <field name="staff_line_ids">
                                <tree string="staff line" editable="bottom" widget="section_and_note_one2many">
                                    <control>
                                        <create string="Add a Line"/>
                                        <create string="Add a Section"
                                                context="{'default_display_type':'line_section'}"/>
                                        <create string="Add a Note" context="{'default_display_type':'line_note'}"/>
                                    </control>
                                    <field name="sequence" widget="handle"/>
                                    <field name="name"/>
                                    <field name="product_id"/>
                                </tree>
                                <form string="staff line">
                                    <group>
                                        <field name="name"/>
                                        <field name="product_id"/>
                                    </group>
                                </form>
                            </field>
                        </page>
                    </notebook>
                    <div style="float:right;padding-right:40px;">
                        <div style="float:left;">
                            <h6 style="margin-bottom:5px;margin-top:5px;">In Hand Salary</h6>
                            <br/>
                            <h6 style="margin-bottom:5px;">EPF+EFI</h6>
                            <br/>
                            <h6>CTC</h6>

                        </div>
                        <div style="float:right;">
                            <field name="hand_salary"/>
                            <br/>
                            <br/>
                            <field name="epf_efi"/>
                            <br/>
                            <br/>
                            <field name="ctc_salary"/>

                        </div>
                    </div>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    # Tree View

    <!--    if we want to change color of records according to base on any filed in tree view then define decoratio-info tag-->
    <!--    in tree view-->
    <!--    and remember field must be present in tree view on behalf of which we want to change color of records.-->
    <!--    we can use multiple decoratio-info, info,success,warning,danger,muted,bf(bf means bold),...-->
    <!--        if we want show sum of any field or average of any field then add attribute on that field-->


    <record id="rest_staff_view_tree" model="ir.ui.view">
        <field name="name">rest.staff.view.tree</field>
        <field name="model">rest.staff</field>
        <field name="arch" type="xml">
            <tree string="staff Tree" decoration-info="status=='active'">
                <field name="seq_num"/>
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="age" avg="Average of age"/>
                <field name="dob"/>
                <field name="gender"/>
                <field name="mobile"/>
                <field name="email"/>
                <field name="ctc_salary" sum="Sum of ctc_salary"/>
                <field name="country_id" widget="many2button"/>
                <field name="country_ids" widget="many2many_tags"/>
                <field name="status"/>
            </tree>
        </field>
    </record>

    # Search View

    <record id="rest_staff_view_search" model="ir.ui.view">
        <field name="name">rest.staff.view.search</field>
        <field name="model">rest.staff</field>
        <field name="arch" type="xml">
            <search string="staff search">
                <field name="name"/>
                <field name="age"/>
                <field name="mobile"/>
                <field name="email" filter_domain="['|',('email','ilike',self),('mobile','ilike',self)]"/>
                <separator/>
                <filter string="Active" name="active" domain="[('status','=','active')]"/>
                <filter string="Resigned" name="resigned" domain="[('status','=','resigned')]"/>
                <separator/>
                <filter string="Male" name="male" domain="[('gender','=','male')]"/>
                <filter string="Female" name="female" domain="[('gender','=','female')]"/>
                <separator/>
                <group string="Group By" expand="0">
                    <filter string="Gender" name="gender" context="{'group_by':'gender'}"/>
                    <separator/>
                    <filter string="Status" name="status" context="{'group_by':'status'}"/>
                </group>
            </search>
        </field>
    </record>

    # Kanban view
    <!--    these are default parameters which is must to show kanban view(<kanban string="staff kanban" class="o_res_partner_kanban">,-->
    <!--   different type of classes are available but mostly used is this, <templates>, <t t-name="kanban-box">) this are mandatory-->
    <!--    after this we can define div as we want-->

    <!--    for Showing image on record and image on kanban view-->
    <!--    1. create image field in model as a Binary-->
    <!--    2. put this field in form view where <sheet tag start> <field name="image" widget="image" style="width:150px;height:150px;"/>-->
    <!--    3. put <field name="id"/> in kanban view before <templates/> tag-->
    <!--    4. create new <div> <img alt="Avatar" t-att-src="kanban_image('rest.staff','image',record.id.raw_value)"/></div>-->


    <record id="rest_staff_view_kanban" model="ir.ui.view">
        <field name="name">rest.staff.view.kanban</field>
        <field name="model">rest.staff</field>
        <field name="arch" type="xml">
            <kanban string="staff kanban" class="o_res_partner_kanban">
                <field name="id"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click" style="height:135px;background-color:#D6C2AA">
                            <div style="width:30%;float:left;display:inline-block;">
                                <img alt="Avatar" t-att-src="kanban_image('rest.staff','image',record.id.raw_value)"
                                     style="width:100px;height:120px;"/>
                            </div>
                            <div style="width:70%;float:right;display:inline-block;">
                                <ul style="list-style-type:none;">
                                    <li>
                                        <b>Name:</b>
                                        <field name="name"/>
                                    </li>
                                    <li>
                                        <b>Age:</b>
                                        <field name="age"/>
                                    </li>
                                    <li>
                                        <b>Mobile:</b>
                                        <field name="mobile"/>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>


    <!--    if we want to set default search (by any field or set by group_by) we need to add
        context like this after search_default_add name of selection e.g.. active,resigned,male,female,gender,status
        <field name="context">{'search_default_male':1}</field>-->


    <!--        # if we want to show selected fields orders then we use domain e.g.-->
    <!--        <field name="domain">[('gender', '=', 'male')]</field>-->
    <!--        <field name="domain">[('status', '=', 'active')]</field>-->
    <!--    (in domain we pass list   but   in context we pass dictionary)&#45;&#45;&#45;&#45; in context if we want select default value -->
    <!--    we must use default_ before field name e.g.. default_gender-->
    <!--    we can also use two conditions at a time in context search_default and default_field name-&#45;&#45;-->
    <!--    <field name="context">{'default_gender':'male','search_default_male':1}</field>-->

    <!--    action ID for all records-->
    <record id="rest_staff_action_id" model="ir.actions.act_window">
        <field name="name">ourTeam</field>
        <field name="res_model">rest.staff</field>
        <field name="view_mode">tree,form,search,kanban</field>
        <field name="help" type="html">
            <p class="o_view_no_content_empty_folder">
                there is no records of staff
            </p>
        </field>
    </record>

    <!--    # action ID for male records-->
    <record id="rest_staff_male_action_id" model="ir.actions.act_window">
        <field name="name">Male Records</field>
        <field name="res_model">rest.staff</field>
        <field name="view_mode">tree,form,search,kanban</field>
        <field name="help" type="html">
            <p class="o_view_no_content_empty_folder">
                there is no records of staff
            </p>
        </field>
        <field name="domain">[('gender','=','male')]</field>
        <field name="context">{'default_gender':'male'}</field>
    </record>

    <!--    # action ID for female records-->
    <record id="rest_staff_female_action_id" model="ir.actions.act_window">
        <field name="name">Female Records</field>
        <field name="res_model">rest.staff</field>
        <field name="view_mode">tree,form,search,kanban</field>
        <field name="help" type="html">
            <p class="o_view_no_content_empty_folder">
                there is no records of staff
            </p>
        </field>
        <field name="domain">[('gender','=','female')]</field>
        <field name="context">{'default_gender':'female'}</field>
    </record>
</odoo>